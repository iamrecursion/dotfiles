" IdeaVIM Plugins
set surround
set commentary

" Default Quality of Life Configuration
set scrolloff=10
set timeout
set timeoutlen=1000

" Search Configuration
set ignorecase
set smartcase
set incsearch
set hlsearch
command H noh
nmap <space> zz
nmap n nzz
nmap N Nzz

" General Navigation Commands
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

" Leader Configuration
let mapleader=","

" IntelliJ Only
set ideajoin

